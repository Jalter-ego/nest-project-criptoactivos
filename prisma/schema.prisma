generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  BUY
  SELL
}

enum FeedbackType {
  RISK_ALERT      // HU8: Alerta de riesgo (ej: alta concentración)
  COST_ANALYSIS   // HU9: Análisis de costos (ej: comisiones altas)
  BEHAVIORAL_NUDGE // HU7: Consejo conductual (ej: FOMO)
}

model User {
  id         String       @id @default(cuid())
  email      String       @unique
  name       String?
  password   String?
  portafolio Portafolio[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
}

model PortafolioSnapshot {
  id           String   @id @default(cuid())
  value        Float    // Valor total del portafolio en USD
  timestamp    DateTime @default(now())

  portafolioId String
  portafolio   Portafolio @relation(fields: [portafolioId], references: [id])

  @@index([portafolioId, timestamp])
}

model Feedback {
  id        String       @id @default(cuid())
  message   String       @db.Text 
  type      FeedbackType
  createdAt DateTime     @default(now())

  portafolioId String
  portafolio   Portafolio @relation(fields: [portafolioId], references: [id])
  
  @@index([portafolioId])
}

model Portafolio {
  id           String        @id @default(cuid())
  name         String
  cash         Float         @default(10000.00)

  userId       String
  user         User     @relation(fields: [userId], references: [id])
  
  transactions Transaction[]
  holdings     Holding[]
  snapshots    PortafolioSnapshot[]
  feedbacks    Feedback[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// NUEVO MODELO: Para registrar cuánto de cada activo posee el portafolio
model Holding {
  id           String @id @default(cuid())
  quantity     Float  // Cantidad total del activo que se posee

  portafolioId String
  portafolio   Portafolio @relation(fields: [portafolioId], references: [id])
  
  activeSymbol String
  active       Active @relation(fields: [activeSymbol], references: [symbol])

  @@unique([portafolioId, activeSymbol]) // Un portafolio solo puede tener una tenencia por activo
}


model Transaction {
  id          String  @id @default(cuid())
  type        TransactionType
  amount      Float
  price       Float

  activeSymbol String
  active       Active          @relation(fields: [activeSymbol], references: [symbol])

  portafolioId String
  portafolio   Portafolio @relation(fields: [portafolioId], references: [id])
  createdAt    DateTime   @default(now())
}

model Active {
  symbol     String @id @unique
  name       String

  transactions Transaction[]
  holdings     Holding[]
}
